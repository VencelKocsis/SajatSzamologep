<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/alap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/kijelzo1"
            android:layout_width="380dp"
            android:layout_height="96dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/mygradient"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="0"
            android:textColor="#FF00EF00"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/szam7"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="7"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AC" /> // 7

        <Button
            android:id="@+id/szam8"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/number_gradient"
            android:text="8"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam7"
            app:layout_constraintTop_toBottomOf="@+id/HEX" /> // 8

        <Button
            android:id="@+id/szam9"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/number_gradient"
            android:text="9"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam8"
            app:layout_constraintTop_toBottomOf="@+id/ANS" /> // 9

        <Button
            android:id="@+id/szam4"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="4"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam7" /> // 4

        <Button
            android:id="@+id/szam5"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="5"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam4"
            app:layout_constraintTop_toBottomOf="@+id/szam8" /> // 5

        <Button
            android:id="@+id/szam6"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="6"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam5"
            app:layout_constraintTop_toBottomOf="@+id/szam9" /> // 6

        <Button
            android:id="@+id/szam1"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam4" /> // 1

        <Button
            android:id="@+id/szam2"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="2"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam1"
            app:layout_constraintTop_toBottomOf="@+id/szam5" /> // 2

        <Button
            android:id="@+id/szam3"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="3"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam2"
            app:layout_constraintTop_toBottomOf="@+id/szam6" /> // 3

        <Button
            android:id="@+id/szam0"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/number_gradient"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam2"
            app:layout_constraintVertical_bias="0.0" /> // 0

        <Button
            android:id="@+id/comma"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/number_gradient"
            android:text="."
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/szam0"
            app:layout_constraintTop_toBottomOf="@+id/szam3"
            app:layout_constraintVertical_bias="0.0" /> // .

        <Button
            android:id="@+id/osztas"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="268dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/operation_gradient"
            android:text="/"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toEndOf="@+id/AC"
            app:layout_constraintTop_toTopOf="parent" /> // /

        <Button
            android:id="@+id/szorzas"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/operation_gradient"
            android:text="x"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toEndOf="@+id/szam9"
            app:layout_constraintTop_toBottomOf="@+id/osztas" /> // *

        <Button
            android:id="@+id/minusz"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/operation_gradient"
            android:text="-"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toEndOf="@+id/szam6"
            app:layout_constraintTop_toBottomOf="@+id/szorzas" /> // -

        <Button
            android:id="@+id/plussz"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/operation_gradient"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toEndOf="@+id/szam3"
            app:layout_constraintTop_toBottomOf="@+id/minusz" /> // +

        <Button
            android:id="@+id/egyenlo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/operation_gradient"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toEndOf="@+id/comma"
            app:layout_constraintTop_toBottomOf="@+id/plussz"
            app:layout_constraintVertical_bias="0.0" /> // =

        <Button
            android:id="@+id/AC"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/operation_gradient"
            android:text="AC"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />// AC

        <Button
            android:id="@+id/ANS"
            android:layout_width="154dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/clicked_gradient"
            android:text="ANS"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toEndOf="@+id/HEX"
            app:layout_constraintTop_toBottomOf="@+id/BIN" />// ANS

        <Button
            android:id="@+id/DEC"
            android:layout_width="154dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/m_gradient"
            android:text="DEC"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kijelzo1" /> // DEC

        <Button
            android:id="@+id/BIN"
            android:layout_width="154dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/m_gradient"
            android:text="BIN"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/DEC"
            app:layout_constraintTop_toBottomOf="@+id/kijelzo1" /> // BIN

        <Button
            android:id="@+id/HEX"
            android:layout_width="154dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/m_gradient"
            android:text="HEX"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DEC" />
        // HEX

        // OCT

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>