<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/alap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/kijelzo1"
            android:layout_width="380dp"
            android:layout_height="92dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/mygradient"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="0"
            android:textColor="#FF00EF00"
            android:textSize="35sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/szam7"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="7"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AC" /> // 7

        <Button
            android:id="@+id/szam8"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="8"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam7"
            app:layout_constraintTop_toBottomOf="@+id/memoryplussz" /> // 8

        <Button
            android:id="@+id/szam9"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="9"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam8"
            app:layout_constraintTop_toBottomOf="@+id/memoryminusz" /> // 9

        <Button
            android:id="@+id/szam4"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="4"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam7" /> // 4

        <Button
            android:id="@+id/szam5"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="5"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam4"
            app:layout_constraintTop_toBottomOf="@+id/szam8" /> // 5

        <Button
            android:id="@+id/szam6"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="6"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam5"
            app:layout_constraintTop_toBottomOf="@+id/szam9" /> // 6

        <Button
            android:id="@+id/szam1"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam4" /> // 1

        <Button
            android:id="@+id/szam2"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="2"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam1"
            app:layout_constraintTop_toBottomOf="@+id/szam5" /> // 2

        <Button
            android:id="@+id/szam3"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="3"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam2"
            app:layout_constraintTop_toBottomOf="@+id/szam6" /> // 3

        <Button
            android:id="@+id/szam0"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam2" /> // 0

        <Button
            android:id="@+id/comma"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_gradient"
            android:text="."
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam0"
            app:layout_constraintTop_toBottomOf="@+id/szam3" /> // .

        <Button
            android:id="@+id/osztas"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="176dp"
            android:background="@drawable/operation_gradient"
            android:text="/"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/memoryminusz"
            app:layout_constraintTop_toTopOf="parent" /> // /

        <Button
            android:id="@+id/szorzas"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/operation_gradient"
            android:text="x"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/szam9"
            app:layout_constraintTop_toBottomOf="@+id/osztas" /> // *

        <Button
            android:id="@+id/minusz"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/operation_gradient"
            android:text="-"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam6"
            app:layout_constraintTop_toBottomOf="@+id/szorzas" /> // -

        <Button
            android:id="@+id/plussz"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/operation_gradient"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/szam3"
            app:layout_constraintTop_toBottomOf="@+id/minusz" /> // +

        <Button
            android:id="@+id/egyenlo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/operation_gradient"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/comma"
            app:layout_constraintTop_toBottomOf="@+id/plussz" /> // =

        <Button
            android:id="@+id/AC"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="176dp"
            android:background="@drawable/operation_gradient"
            android:text="AC"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /> // AC

        <Button
            android:id="@+id/memoryplussz"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="176dp"
            android:background="@drawable/m_gradient"
            android:text="M+"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/AC"
            app:layout_constraintTop_toTopOf="parent" /> // M+

        <Button
            android:id="@+id/memoryminusz"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="176dp"
            android:background="@drawable/m_gradient"
            android:text="M-"

            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/memoryplussz"
            app:layout_constraintTop_toTopOf="parent" /> // M-

        <Button
            android:id="@+id/releaseMemory"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/m_gradient"
            android:text="RM"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/memory"
            app:layout_constraintTop_toBottomOf="@+id/comma" /> // RM

        <Button
            android:id="@+id/createMemory"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/m_gradient"
            android:text="CM"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/releaseMemory"
            app:layout_constraintTop_toBottomOf="@+id/egyenlo" /> // CM

        <Button
            android:id="@+id/memory"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/m_gradient"
            android:text="M"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/szam0" /> // M

        <Button
            android:id="@+id/ANS"
            android:layout_width="332dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/clicked_gradient"
            android:text="ANS"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/memory" /> // ANS

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>